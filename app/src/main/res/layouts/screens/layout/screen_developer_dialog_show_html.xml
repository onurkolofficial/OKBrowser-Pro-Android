<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Dialog Layout !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Spanned Code Source EditText Layout !-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- for Horizontal Scroll !-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- ViewSource EditText !-->
                    <com.onurkol.app.browser.pro.edittext.OKDeveloperEditText
                        android:id="@+id/viewHTMLCodeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:gravity="top"
                        android:focusableInTouchMode="false"
                        android:focusable="true"
                        android:clickable="false"
                        android:background="@color/transparent"
                        android:textColor="@color/white1"
                        android:textSize="15sp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>
        <!-- Right Buttons Layout !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">
            <!-- Close Button !-->
            <Button
                android:id="@+id/closeShowHTMLDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="@string/close_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>