<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Check Item Toolbar !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end">
        <!-- Code Copy Button !-->
        <ImageButton
            android:id="@+id/codeCopyButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/copy_text"
            android:tooltipText="@string/copy_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_copy_circle" />
        <!-- Code Apply Button !-->
        <ImageButton
            android:id="@+id/codeApplyButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/apply_text"
            android:tooltipText="@string/apply_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_check_circle" />
    </LinearLayout>
    <!-- Check Item Edit Text !-->
    <EditText
        android:id="@+id/itemCode"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:focusableInTouchMode="true"
        android:background="@color/transparent"
        android:textColor="@color/white1"
        android:textSize="15sp" />
</LinearLayout>