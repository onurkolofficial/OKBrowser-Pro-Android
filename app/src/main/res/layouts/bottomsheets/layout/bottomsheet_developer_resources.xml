<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Resources Toolbar !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:gravity="end"
        android:layout_marginEnd="10dp">
        <!-- Refresh Button !-->
        <ImageButton
            android:id="@+id/resourcesRefreshButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/refresh_text"
            android:tooltipText="@string/refresh_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_sync_circle"/>
    </LinearLayout>
    <!-- Resources List !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- List View !-->
        <ListView
            android:id="@+id/resourceListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"/>
    </LinearLayout>
</LinearLayout>