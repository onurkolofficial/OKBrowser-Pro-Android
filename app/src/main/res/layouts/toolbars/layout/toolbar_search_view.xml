<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarFind"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Close Button !-->
        <ImageButton
            android:id="@+id/findCloseButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_baseline_close_24"
            android:tooltipText="@string/close_text" />
        <!-- Search View !-->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/browserFindView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            app:iconifiedByDefault="false"
            app:searchIcon="@null"
            app:closeIcon="@null"/>
        <!-- Next Button !-->
        <ImageButton
            android:id="@+id/findNextButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:tooltipText="@string/next_text" />
        <!-- Previous Button !-->
        <ImageButton
            android:id="@+id/findBackButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            android:tooltipText="@string/back_text" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>