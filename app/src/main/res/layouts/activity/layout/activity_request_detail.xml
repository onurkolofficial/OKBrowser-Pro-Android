<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.browser.SettingsActivity">
    <!-- Toolbars Layout !-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp">
        <!-- Toolbar Settings !-->
        <include
            layout="@layout/toolbar_settings" />
    </com.google.android.material.appbar.AppBarLayout>
    <!-- Content !-->
    <!-- Request Detail Page !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Request Url !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <!-- Url Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/link_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Url !-->
            <TextView
                android:id="@+id/requestGetUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_URL"/>
        </LinearLayout>
        <!-- Request Type !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Type Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/type_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Type !-->
            <TextView
                android:id="@+id/requestGetType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_TYPE"/>
        </LinearLayout>
        <!-- Request Host !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Host Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/host_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Host !-->
            <TextView
                android:id="@+id/requestGetHost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_HOST"/>
        </LinearLayout>
        <!-- Request Scheme !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Scheme Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/scheme_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Scheme !-->
            <TextView
                android:id="@+id/requestGetScheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_SCHEME"/>
        </LinearLayout>
        <!-- Request Queries !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Queries Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/queries_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Queries !-->
            <TextView
                android:id="@+id/requestGetQuery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_QUERY"/>
        </LinearLayout>
        <!-- Request Paths !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <!-- Paths Text !-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="7dp"
                android:textSize="15sp"
                android:text="@string/paths_text"/>
            <!-- : !-->
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=":"/>
            <!-- Text !-->
            <TextView
                android:id="@+id/requestGetPaths"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="REQUEST_PATHS"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>