<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Image Url !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/showWebUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="Image URL" />
    </LinearLayout>
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Menu Body !-->
    <!-- Menu Buttons Scroll Layout !-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Open Image Layout Button !-->
            <LinearLayout
                android:id="@+id/imageOpenLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/open_image_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_outline_image_24" />
            </LinearLayout>
            <!-- Open Image With New Tab Layout Button !-->
            <LinearLayout
                android:id="@+id/imageOpenNewTabLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/open_image_new_tab_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>
            <!-- Open Image With Incognito Tab Layout Button !-->
            <LinearLayout
                android:id="@+id/imageOpenIncognitoLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/open_image_incognito_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_add_box_24" />
            </LinearLayout>
            <!-- Download Image Layout Button !-->
            <LinearLayout
                android:id="@+id/imageDownloadLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/download_image_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_get_app_24" />
            </LinearLayout>
            <!-- Copy Link Layout Button !-->
            <LinearLayout
                android:id="@+id/imageCopyLinkLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/copy_link_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_content_copy_24" />
            </LinearLayout>
            <!-- Developer Menu !-->
            <include
                android:id="@+id/includeDeveloperMenu"
                layout="@layout/menu_webview_developer" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>