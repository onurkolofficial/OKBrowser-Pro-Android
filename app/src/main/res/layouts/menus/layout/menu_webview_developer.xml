<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Check Item Layout Button !-->
    <LinearLayout
        android:id="@+id/checkItemLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clickable="true"
        android:focusable="true">
        <!-- Title !-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/check_item_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_baseline_edit_note_24" />
    </LinearLayout>
    <!-- Bypass Item Layout Button !-->
    <LinearLayout
        android:id="@+id/bypassItemLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clickable="true"
        android:focusable="true">
        <!-- Title !-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/bypass_item_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_baseline_visibility_off_24" />
    </LinearLayout>
    <!-- Flexbox Layout Button !-->
    <LinearLayout
        android:id="@+id/flexboxLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clickable="true"
        android:focusable="true">
        <!-- Title !-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/flexbox_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_baseline_check_box_outline_blank_24" />
    </LinearLayout>
</LinearLayout>