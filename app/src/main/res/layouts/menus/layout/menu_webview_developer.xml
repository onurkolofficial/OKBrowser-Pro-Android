<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Menu Side Icon Group !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <!-- Check Item Button !-->
        <ImageButton
            android:id="@+id/checkItemButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/check_item_text"
            android:tooltipText="@string/check_item_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_edit_circle" />
        <!-- Bypass Item Button !-->
        <ImageButton
            android:id="@+id/bypassItemButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/bypass_item_text"
            android:tooltipText="@string/bypass_item_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_remove_item_circle" />
        <!-- Flexbox Button !-->
        <ImageButton
            android:id="@+id/flexboxButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/flexbox_text"
            android:tooltipText="@string/flexbox_text"
            tools:targetApi="o"
            app:srcCompat="@drawable/ic_icon_border_dash_circle" />
    </LinearLayout>
</LinearLayout>