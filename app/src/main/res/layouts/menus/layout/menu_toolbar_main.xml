<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Menu Side Icon Group !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Forward Button !-->
        <ImageButton
            android:id="@+id/menuForwardButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />
        <!-- Refresh Button !-->
        <ImageButton
            android:id="@+id/menuRefreshButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_baseline_refresh_24" />
        <!-- Add Bookmark Button !-->
        <ImageButton
            android:id="@+id/addBookmarkButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_baseline_star_border_24" />
        <!-- Downloads Button !-->
        <ImageButton
            android:id="@+id/downloadsButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_baseline_get_app_24" />
        <!-- History Button !-->
        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/ic_baseline_history_24" />
    </LinearLayout>
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Menu Buttons Layout !-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Buttons !-->
            <!-- New Tab Layout Button !-->
            <LinearLayout
                android:id="@+id/newTabLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/new_tab_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>
            <!-- New Incognito Tab Layout Button !-->
            <LinearLayout
                android:id="@+id/newIncognitoTabLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/new_incognito_tab_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_add_box_24" />
            </LinearLayout>
            <!-- Desktop Mode Layout Checkbox !-->
            <LinearLayout
                android:id="@+id/desktopModeLayoutCheckbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="2dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/desktop_mode_text"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/ic_baseline_desktop_windows_24" />
                <!-- Checkbox !-->
                <CheckBox
                    android:id="@+id/desktopModeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_weight="0.4"/>
            </LinearLayout>
            <!-- Find in Page Layout Button !-->
            <LinearLayout
                android:id="@+id/findInPageLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/find_in_page_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_find_in_page_24" />
            </LinearLayout>
            <!-- Bookmarks Layout Button !-->
            <LinearLayout
                android:id="@+id/bookmarksLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/bookmarks_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_bookmark_border_24" />
            </LinearLayout>
            <!-- Settings Layout Button !-->
            <LinearLayout
                android:id="@+id/settingsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/settings_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_settings_24" />
            </LinearLayout>
            <!-- Close All Tabs Layout Button !-->
            <LinearLayout
                android:id="@+id/closeAllTabsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/close_all_tabs_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_exit_to_app_24" />
            </LinearLayout>
            <!-- Exit Browser Layout Button !-->
            <LinearLayout
                android:id="@+id/exitBrowserLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/exit_browser_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_close_24" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>