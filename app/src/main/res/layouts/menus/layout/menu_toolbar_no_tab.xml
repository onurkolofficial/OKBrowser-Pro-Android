<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Menu Buttons Layout !-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Buttons !-->
            <!-- History Layout Button !-->
            <LinearLayout
                android:id="@+id/noTabHistoryLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/history_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_history_24" />
            </LinearLayout>
            <!-- Bookmarks Layout Button !-->
            <LinearLayout
                android:id="@+id/noTabBookmarksLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/bookmarks_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_bookmark_border_24" />
            </LinearLayout>
            <!-- Downloads Layout Button !-->
            <LinearLayout
                android:id="@+id/noTabDownloadsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/downloads_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_get_app_24" />
            </LinearLayout>
            <!-- Settings Layout Button !-->
            <LinearLayout
                android:id="@+id/noTabSettingsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/settings_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_settings_24" />
            </LinearLayout>
            <!-- Exit Browser Layout Button !-->
            <LinearLayout
                android:id="@+id/noTabExitBrowserLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/exit_browser_text"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_close_24" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>