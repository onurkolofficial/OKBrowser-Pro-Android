<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/version_text"
        app:iconSpaceReserved="false">
        <Preference
            android:key="pref_app_package"
            android:summary="APP_PACKAGE"
            android:title="@string/app_package_text"
            app:iconSpaceReserved="false"/>
        <Preference
            android:key="pref_app_version"
            android:summary="APP_VERSION"
            android:title="@string/app_version_text"
            app:iconSpaceReserved="false"/>
        <Preference
            android:key="pref_android_version"
            android:summary="ANDROID_VERSION"
            android:title="@string/android_version_text"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/contact_text"
        app:iconSpaceReserved="false">
        <Preference
            android:key="pref_developer_name"
            android:summary="Onur KOL"
            android:title="@string/developer_text"
            app:iconSpaceReserved="false"/>
        <Preference
            android:key="pref_dev_web_page"
            android:summary="@string/developer_web_page_summary"
            android:title="@string/developer_web_page_text"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
</PreferenceScreen>